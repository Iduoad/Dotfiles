#--- WM binding
super + shift + {Escape, r}
    bspc {quit, wm -r}

super + q
    xdo close

super + space
    bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

super + f
    bspc node -t \~fullscreen

super + {h,j,k,l}
	bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
	bsp-resize {left,down,up,right}

super + control + {h,j,k,l}
    euclid_mover {west, south, north, east}

super + {0-9}
	bspc desktop -f {0-9}

super + shift + {0-9}
  bspc node -d {0-9}

super + control + {0-9}
  bspc node -d {0-9} && bspc desktop -f {0-9}

super + control + {Right, Left}
  bspc node @parent -C {forward, backward}

super + {g, semicolon}
  bspc desktop -f {prev, next}

super + shift + {g, semicolon}
  bspc node -d {prev, next}

super + Tab
	bspc desktop -f last

super + a
    bspc config window_gap $(( $(bspc config window_gap) + 10))

super + shift + a
    bspc config window_gap 10

#--- Programs Bindings

super + Return
	$TERMINAL
super + shift + Return
	$TERMINAL -e tmux

# lower case hot keys
super + d
	rofi -show run
super + e
    rofi-emoji
super + m
	$TERMINAL -e ncmpcpp
super + n
	$TERMINAL -e newsboat
super + r
	$TERMINAL -e $FILE
super + t
	$TERMINAL -e transmission-remote-cli
super + v
	$TERMINAL -e virtualbox

# upper case hot keys
super + shift + b
    brave
super + shift + d
	rofi-library
super + shift + e
	$BROWSER
super + shift + f
	firefox -private-window
super + shift + i
	$TERMINAL -e htop
super + shift + g
	gimp
super + shift + u
	zeal
super + shift + v
	virtualbox

super + shift + m
	audioctl mute

super + shift + w
	rofi-radio

super + shift + x
	mpc pause; pauseallmpv; betterlockscreen -l dim
super + shift + BackSpace
	lock
Print
    shotgun -f png "$HOME/Pictures/$(date +%Y-%m-%d-%H%M%S).png"
shift + Print
    shotgun -f png $(slop -f "-i %i -g %g") "$HOME/Pictures/$(date +%Y-%m-%d-%H%M%S).png"
control + Print
    shotgun -f png - | xclip -t 'image/png' -selection clipboard
control + shift + Print
    shotgun -f png $(slop -f "-i %i -g %g") - | xclip -t 'image/png' -selection clipboard

XF86Launch1
	xset dpms force off
XF86AudioMute
	audioctl mute
XF86AudioLowerVolume
	audioctl down 5
shift+XF86AudioLowerVolume
	audioctl down 10
control+XF86AudioLowerVolume
	audioctl down 1
XF86AudioRaiseVolume
	audioctl up 5
shift+XF86AudioRaiseVolume
	audioctl up 10
control+XF86AudioRaiseVolume
	audioctl up 1
XF86AudioNext
	audioctl next
XF86AudioPlay
	audioctl toggle
XF86AudioPrev
	audioctl prev
XF86AudioStop
	audioctl toggle
XF86MonBrightnessDown
	xbacklight -dec 15
XF86MonBrightnessUp
	xbacklight -inc 15

# Pause audio
super + {_,shift +} p
 	audioctl {toggle,pause}
# Changes to next/previous tracks
super + {comma,period}
 	audioctl {prev,next}
# # Restart track
super + shift + less
	audioctl replay
# Increase volume

super + {equal,plus}
	audioctl up {5,15}
# # Decrease volume
super {_,shift +} + minus
	audioctl down {5,15}
# # Seek foward in song
super + {_,shift +} bracketright
	audioctl forward {10,120}
# # Seek backward in song
super + {_,shift +} bracketleft
	audioctl back {10,120}
